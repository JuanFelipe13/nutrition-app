{
  "expo": {
    "name": "NutriSearch",
    "slug": "nutrition-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceso a tus fotos para seleccionar imágenes de alimentos.",
          "cameraPermission": "La aplicación necesita acceso a la cámara para tomar fotos de alimentos."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "La aplicación necesita acceso a la cámara para escanear códigos de barras."
        }
      ]
    ]
  }
}
